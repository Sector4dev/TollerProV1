<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_transparent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNTDOWN"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_above="@+id/progressshadow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/progressbase"
        android:background="@drawable/basemaincircle"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:id="@+id/progressBarAlert"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="60"
        android:progressDrawable="@drawable/style_circular"
        android:secondaryProgress="100"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/progressshadow"
        android:background="@drawable/circlebaseshadow2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/alerttimer"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="30"
        android:layout_centerInParent="true"/>


</RelativeLayout>